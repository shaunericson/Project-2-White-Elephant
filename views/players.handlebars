


    <div class="jumbotron">
      <h1 class="display-4">White Elephant Game</h1>

  <h4>Game Number: {{id}}, Game Name: {{game_name}}, Dollar Limit:    ${{gift_dollar_max}} per gift</h4>
      <hr class="my-4">
      <form id="form1" method="POST" action="/playerspecs">
        <!-- From Steve, HBS likes forms like this -->
        <div class="form-group">
          <label for="gamePlayerName">Player Name:</label>
          <input type="text" class="form-control" id="player-name" name="playerName">
        </div>
        <div class="form-group">
          <label for="gamePlayerPic">Player Pic:</label>
          <input type="text" class="form-control" id="player-pic" name="playerPic"><br>
        </div>
        <div class="form-group">
          <label for="gameGiftName">Gift Name:</label>
          <input type="text" class="form-control" id="gift-name" name="giftName"><br>
        </div>
        <div class="form-group">
          <label for="gameGiftPic">Gift Pic:</label>
          <input type="text" class="form-control" id="gift-pic" name="giftPic"><br>
        </div>
      </form>
      <form id="form2" method="get" action="/playgame"></form>
      <button type="submit" form="form2" id="get-started" value="Submit" class="btn btn-success float-right">Start Game</button>
      <button type="submit" form="form1" id="enter-player" value="Submit" class="btn btn-danger float-right">Submit
        Present</button>
    </div>





